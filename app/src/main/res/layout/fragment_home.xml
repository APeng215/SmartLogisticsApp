<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/orderInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单信息"

        app:layout_constraintBottom_toTopOf="@+id/orderInfoTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/orderInfoTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="@+id/scanButton"
        app:layout_constraintTop_toBottomOf="@id/orderInfoTitle">

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="订单 ID" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="创建时间" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="更新时间" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="商品状态" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="目标仓库" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="所属车辆 ID" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="10dp"
                android:text="所属货架 ID" />

            <TextView
                android:padding="10dp"
                android:text="xxx" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/scanQRCode"
        app:layout_constraintTop_toBottomOf="@id/orderInfoTable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
